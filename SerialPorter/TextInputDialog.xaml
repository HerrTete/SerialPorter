<Window x:Class="SerialPorter.TextInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TextInputDialog" WindowStyle="ToolWindow" Height="140" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding QuestionText}" Margin="5"/>
        <TextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding InputText}" Margin="5"/>
        <Button Grid.Column="0" Grid.Row="2" Content="Ok" Margin="5" Click="OkClick"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Cancel" Margin="5" Click="CancelClick"/>
    </Grid>
</Window>
