<Window x:Class="SerialPorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SerialPorter" Height="400" Width="860">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" ItemsSource="{Binding Messages}" Name="MessageListView"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Create connection" Width="100" Margin="10" Click="Create_connection_Clicked"/>
            <Button Content="Open connection" Width="100" Margin="10" Click="Open_connection_Clicked"/>
            <Button Content="Close connection" Width="100" Margin="10" Click="Close_connection_Clicked"/>
            <Button Content="Send Text" Width="100" Margin="10" Click="Send_Text_Clicked"/>
            <Button Content="Send File" Width="100" Margin="10" Click="Send_File_Clicked"/>
            <Button Content="Clear Log" Width="100" Margin="10" Click="Clear_Log_Clicked"/>
            <Button Content="Save Log" Width="100" Margin="10" Click="Save_Log_Clicked"/>
        </StackPanel>
    </Grid>
</Window>
